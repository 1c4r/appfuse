<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />

	<b:ResponsiveNavbar position="TOP">
		<b:Brand text="{i18n.webapp_name}" />
		<b:Nav>
			<b:NavLink href="#mainMenu:" text="{i18n.mainMenu_title}"/>
			<b:NavLink href="#editProfile:" text="{i18n.menu_user}"/>
			<b:Dropdown text="{i18n.menu_admin}" >
				<b:NavLink href="#users:" text="{i18n.menu_admin_users}"/>
				<b:NavLink href="#activeUsers:" text="{i18n.mainMenu_activeUsers}"/>
				<b:NavLink href="#reload:" text="{i18n.menu_admin_reload}"/>
				<b:NavLink href="#upload:" text="{i18n.menu_selectFile}"/>
			</b:Dropdown>
		</b:Nav>
		<b:Nav alignment="RIGHT">
			<b:NavLink href="#logout:" text="{i18n.user_logout}"/>
		</b:Nav>
	</b:ResponsiveNavbar>
</ui:UiBinder>
