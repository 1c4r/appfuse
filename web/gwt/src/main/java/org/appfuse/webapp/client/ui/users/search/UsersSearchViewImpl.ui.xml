<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client">

<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />
<ui:with type="java.lang.Integer" field="pageSize" />


<b:Column size="10">
	<b:Heading size="2"  ui:field="heading" text="{i18n.userList_heading}" />
	
	<b:WellForm type="SEARCH" styleName="searchForm">
		<b:InputAddOn>
			<b:TextBox ui:field="searchTerm" searchQuery="true" placeholder="search our site..." />
			<b:appendWidget>
				<b:Button ui:field="searchButton">Search</b:Button>
			</b:appendWidget>
		</b:InputAddOn>
	</b:WellForm>
	
	<b:FormActions>
      <b:Button ui:field="addButton" text="{i18n.button_add}" styleName="primary" />
      <b:Button ui:field="doneButton" text="{i18n.button_done}" styleName="primary" />
	</b:FormActions>     

	<c:SimplePager display="{table}" location="LEFT" />
    <c:CellTable pageSize="{pageSize}" ui:field="table" width="100%"/>
	<c:SimplePager display="{table}" location="LEFT" />
</b:Column>
</ui:UiBinder>
