<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />

<g:HTMLPanel>
	    <h2 ui:field="heading" class="form-signin-heading">
	        <ui:text from="{i18n.login_heading}"/>
	    </h2>
	    
	    <g:SimplePanel ui:field="messages" />
	
		<b:TextBox ui:field="username" placeholder="{i18n.user_username}" />
		<b:PasswordTextBox ui:field="password" placeholder="{i18n.user_password}" />
	
	    <label ui:field="rememberMeLabel" class="checkbox" for="spring_security_remember_me" >
	    	<b:CheckBox ui:field="spring_security_remember_me" />
	        <ui:text from="{i18n.login_rememberMe}"/>
	   </label>
	
		<b:Button ui:field="loginButton" styleName="btn btn-large btn-primary" text="{i18n.button_login}" />

</g:HTMLPanel>
</ui:UiBinder>