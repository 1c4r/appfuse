<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />

<g:HTMLPanel styleName="container-fluid">

<div class="span2">
	<h2 ui:field="heading"><ui:text from="{i18n.userProfile_heading}"/></h2>
       <p ui:field="subheading"><ui:text from="{i18n.userProfile_title}"/></p>
</div>
     
<div class="span7">
<form id="userForm" class="well form-horizontal" autocomplete="off" >

    <b:LongBox ui:field="id" visible="false" />
    <b:IntegerBox ui:field="version" visible="false" />
    
	<fieldset class="control-group">
        <label class="control-label" for="username"><ui:text from="{i18n.user_username}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:TextBox ui:field="username" />
        </div>
    </fieldset>
	<fieldset class="control-group">
        <label class="control-label" for="password"><ui:text from="{i18n.user_password}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:PasswordTextBox ui:field="password" />
        </div>
    </fieldset>	
	<fieldset class="control-group">
        <label class="control-label" for="confirmPassword"><ui:text from="{i18n.user_confirmPassword}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:PasswordTextBox ui:field="confirmPassword" />
        </div>
    </fieldset>	
	<fieldset class="control-group">
        <label class="control-label" for="passwordHint"><ui:text from="{i18n.user_passwordHint}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:TextBox ui:field="passwordHint" />
        </div>
    </fieldset>
	<fieldset class="control-group">
        <label class="control-label" for="firstName"><ui:text from="{i18n.user_firstName}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:TextBox ui:field="firstName" />
        </div>
    </fieldset>
	<fieldset class="control-group">
        <label class="control-label" for="lastName"><ui:text from="{i18n.user_lastName}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:TextBox ui:field="lastName" />
        </div>
    </fieldset>
	<fieldset class="control-group">
        <label class="control-label" for="email"><ui:text from="{i18n.user_email}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:TextBox ui:field="email" />
        </div>
    </fieldset>
	<fieldset class="control-group">
        <label class="control-label" for="phoneNumber"><ui:text from="{i18n.user_phoneNumber}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:TextBox ui:field="phoneNumber" />
        </div>
    </fieldset>
	<fieldset class="control-group">
        <label class="control-label" for="website"><ui:text from="{i18n.user_website}" /> <span class="required">*</span></label>
        <div class="controls">
        	<b:TextBox ui:field="website" />
        </div>
    </fieldset>

	<fieldset ui:field="addressFieldset">
		<legend class="accordion-heading">
		    <a href="#collapse-address" data-toggle="collapse">Address</a>
		</legend>
		<div class="accordion-body collapse" id="collapse-address">
		    <fieldset class="control-group">
		        <label class="control-label" for="address">Address</label>
		        <div class="controls">
		            <b:TextBox ui:field="address" />
		        </div>
		    </fieldset>
		    <fieldset class="control-group">
		        <label class="control-label" for="city">City</label>
		        <div class="controls">
		            <b:TextBox ui:field="city" />
		        </div>
		    </fieldset>
		    <fieldset class="control-group">
		        <label class="control-label" for="province">State</label>
		        <div class="controls">
		            <b:TextBox ui:field="province" />
		        </div>
		    </fieldset>
		    <fieldset class="control-group">
		        <label class="control-label" for="postalCode">Zip</label>
		        <div class="controls">
		            <b:TextBox ui:field="postalCode" />
		        </div>
		    </fieldset>
		    <fieldset class="control-group">
		        <label class="control-label" for="country">Country</label>
		        <div class="controls">
		            <b:ListBox  ui:field="country" />
		        </div>
		    </fieldset>
		</div>
	</fieldset>

	<fieldset ui:field="accountSettings" class="control-group">
	    <label class="control-label">Account Settings</label>
	    <div class="controls">
	        <label class="checkbox inline">
	           <b:CheckBox ui:field="enabled" /><ui:text from="{i18n.user_enabled}" />
	        </label>
	
	        <label class="checkbox inline">
	            <b:CheckBox ui:field="accountExpired" /><ui:text from="{i18n.user_accountExpired}" />
	        </label>
	
	        <label class="checkbox inline">
	            <b:CheckBox ui:field="accountLocked" /><ui:text from="{i18n.user_accountLocked}" />
	        </label>
	
	        <label class="checkbox inline">
	            <b:CheckBox ui:field="credentialsExpired" /><ui:text from="{i18n.user_credentialsExpired}" />
	        </label>
	    </div>
	</fieldset>
	
	<fieldset class="control-group">
	    <label class="control-label" for="userRoles">Assign Roles</label>
	    <div class="controls">
	    	<b:ListBox ui:field="roles" />
	    </div>
	</fieldset>	


	<fieldset class="form-actions">
		<b:Button ui:field="saveButton" styleName="btn btn-primary" customIconStyle="icon-ok icon-white" text="{i18n.button_save}" />
		<b:Button ui:field="deleteButton" styleName="btn" customIconStyle="icon-remove" text="{i18n.button_delete}" />
		<b:Button ui:field="cancelButton" styleName="btn" customIconStyle="icon-remove" text="{i18n.button_cancel}" />
	</fieldset>
</form>	
</div>
</g:HTMLPanel>
</ui:UiBinder>
