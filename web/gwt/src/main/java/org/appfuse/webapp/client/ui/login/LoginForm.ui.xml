<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

<ui:with type="org.appfuse.webapp.client.application.ApplicationResources" field="i18n" />

<g:HTMLPanel>
	<form autocomplete="off" class="form-signin" id="loginForm" action="j_security_check" method="post">

	    <h2 ui:field="heading" class="form-signin-heading">
	        <ui:text from="{i18n.login_heading}"/>
	    </h2>
	    
	    <g:SimplePanel ui:field="messages" />
	
		<b:ControlGroup ui:field="usernameGroup">
	       	<b:Controls>
	       		<b:TextBox ui:field="username" placeholder="{i18n.user_username}" controlGroup="{usernameGroup}" errorLabel="{usernameErrors}" />
	       		<b:HelpInline ui:field="usernameErrors"></b:HelpInline>
	       	</b:Controls>
	    </b:ControlGroup>
		<b:ControlGroup ui:field="passwordGroup">
	       	<b:Controls>
	       		<b:PasswordTextBox ui:field="password" placeholder="{i18n.user_password}" controlGroup="{passwordGroup}" errorLabel="{passwordErrors}" />
	       		<b:HelpInline ui:field="passwordErrors"></b:HelpInline>
	       	</b:Controls>
	    </b:ControlGroup>
	
		<b:ControlGroup ui:field="rememberMeControl">
		    <b:ControlLabel  styleName="checkbox" for="spring_security_remember_me" >
		    	<b:CheckBox ui:field="rememberMe" inline="true"/>
		        <ui:text from="{i18n.login_rememberMe}"/>
		   </b:ControlLabel>
		</b:ControlGroup>
	
		<b:Button ui:field="loginButton" styleName="btn btn-large btn-primary" text="{i18n.button_login}" />
	</form>

</g:HTMLPanel>
</ui:UiBinder>